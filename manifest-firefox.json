{
  "manifest_version": 2,
  "name": "Steam to SteamUnlocked.org",
  "version": "1.0",
  "description": "Automatically shows SteamUnlocked.org link on Steam game pages.",
  "permissions": ["tabs", "activeTab"],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "steam-to-steamunlocked@example.com",
      "data_collection_permissions": {
        "collects_user_data": false,
        "required": ["none"],
        "details": []
      }
    }
  }
}
